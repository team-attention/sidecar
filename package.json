{
  "private": true,
  "name": "code-squad-monorepo",
  "version": "0.1.28",
  "description": "Code Squad monorepo - VS Code extension for multi-agent coding",
  "repository": {
    "type": "git",
    "url": "https://github.com/team-attention/code-squad.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @code-squad/core build",
    "build:vscode": "pnpm --filter code-squad build",
    "package": "pnpm --filter code-squad run esbuild && pnpm --filter code-squad run package",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r run clean"
  },
  "devDependencies": {
    "typescript": "^5.4.5"
  }
}
